<?xml version="1.0"?>
<block>
  <name>Mach. Learning Decision</name>
  <key>fsmac_ml_decision</key>
  <category>[FS-MAC 2.0]</category>
  <import>import fsmac</import>
  <make>fsmac.ml_decision($is_coord, $alpha, $filename)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Type</name>
    <key>is_coord</key>
    <type>bool</type>

    <option>
      <name>Coordinator</name>
      <key>True</key>
    </option>
    <option>
      <name>Normal</name>
      <key>False</key>
    </option>
  </param>

  <param>
    <name>Alpha</name>
    <key>alpha</key>
    <value>0.01</value>
    <type>float</type>
  </param>

  <param>
    <name>File</name>
    <key>filename</key>
    <type>file_save</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->

  <sink>
    <name>sensor 1 in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>sensor 2 in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>sensor 3 in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>sensor 4 in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>sensor 5 in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>max in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>act protocol in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <doc>
    Alpha is a parameter for the moving average of inputs. This aims a smooth pick up of best MAC protocol.
  </doc>
</block>
