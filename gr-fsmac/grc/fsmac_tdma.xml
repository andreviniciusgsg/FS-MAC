<?xml version="1.0"?>
<block>
  <name>TDMA</name>
  <key>fsmac_tdma</key>
  <category>fsmac</category>
  <import>import fsmac</import>
  <make>fsmac.tdma($mac_addr, $dest_node, $debug, $is_coord)</make>
	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>MAC ID</name>
		<key>mac_addr</key>
		<value>0</value>
		<type>int</type>
	</param>

	<param>
		<name>Destination Node</name>
		<key>dest_node</key>
		<value>1</value>
		<type>int</type>
	</param>
	
	<param>
		<name>Node type</name>
		<key>is_coord</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Coordinator</name>
			<key>True</key>
		</option>
		<option>
			<name>Normal</name>
			<key>False</key>
		</option>
	</param>
	<sink>
		<name>pdu in</name>
		<type>message</type>
		<optional>1</optional>
	</sink>
	<sink>
		<name>app in</name>
		<type>message</type>
		<optional>1</optional>
	</sink>
	<sink>
		<name>ctrl in</name>
		<type>message</type>
		<optional>1</optional>
	</sink>
	<sink>
		<name>snr in</name>
		<type>message</type>
		<optional>1</optional>
	</sink>
	<source>
		<name>pdu out</name>
		<type>message</type>
		<optional>1</optional>
	</source>
	<source>
		<name>app out</name>
		<type>message</type>
		<optional>1</optional>
	</source>
	<source>
		<name>ctrl out</name>
		<type>message</type>
		<optional>1</optional>
	</source>

</block>
